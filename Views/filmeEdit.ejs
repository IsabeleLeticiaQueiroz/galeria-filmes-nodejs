<%- include('partials/header.ejs') %>
<%- include('partials/navbar1.ejs') %>

<section data-bs-version="5.1" class="form5 cid-uvajJen2lI" id="form02-5">
    <br><br><br><br>
    
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 content-head">
                <div class="mbr-section-head mb-5">
                    <h3 class="mbr-section-title mbr-fonts-style align-center mb-0 display-2">
                        <strong>Edite o filme!</strong></h3>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8 mx-auto mbr-form">
                <!-- O action será '/filme/edit/:id' e o método POST ou PUT -->
                <form action="/filme/edit/<%= filme.id %>" method="POST" class="mbr-form form-with-styler" data-verified="">
                    <div class="dragArea row">
                        <div class="col-md col-sm-12 form-group mb-3" data-for="titulo">
                            <input type="text" name="titulo" placeholder="Título do Filme" data-form-field="titulo" class="form-control" value="<%= filme.titulo %>" id="titulo-form02-5">
                        </div>

                        <div class="col-md col-sm-12 form-group mb-3" data-for="descricao">
                            <textarea name="descricao" placeholder="Descrição do Filme" data-form-field="descricao" class="form-control" id="descricao-form02-5"><%= filme.descricao %></textarea>
                        </div>

                        <div class="col-md col-sm-12 form-group mb-3" data-for="ano">
                            <input type="number" name="ano" placeholder="Ano de Lançamento" data-form-field="ano" class="form-control" value="<%= filme.ano %>" id="ano-form02-5">
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12 align-center mbr-section-btn">
                            <button type="submit" class="btn btn-primary display-7">Atualizar Filme</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer.ejs') %>
